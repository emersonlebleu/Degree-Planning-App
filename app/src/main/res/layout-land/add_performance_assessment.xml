<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AddPerformanceActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="81dp"
        android:layout_height="41dp"
        android:layout_marginStart="356dp"
        android:layout_marginTop="108dp"
        android:text="% Complete"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="75dp"
        android:layout_height="26dp"
        android:layout_marginStart="356dp"
        android:layout_marginTop="48dp"
        android:text="Course ID:"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/addCourseOfPerformanceField"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="440dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="none"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="232dp"
        android:layout_marginTop="8dp"
        android:text="Performance Assessment"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addPerformanceStartField"
        android:layout_width="179dp"
        android:layout_height="44dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Select Start"
        android:inputType="text|date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addPerformanceEndField"
        android:layout_width="179dp"
        android:layout_height="44dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="152dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Select End"
        android:inputType="text|date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addPerformanceTitleField"
        android:layout_width="179dp"
        android:layout_height="44dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Assessment Title"
        android:inputType="textNoSuggestions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addAssessmentSaveBtn"
        android:layout_width="228dp"
        android:layout_height="58dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="90dp"
        android:onClick="saveNewPerformance"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addPerformanceEndField" />

    <EditText
        android:id="@+id/addPercentComplete"
        android:layout_width="82dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="208dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addCourseOfPerformanceField" />
</androidx.constraintlayout.widget.ConstraintLayout>